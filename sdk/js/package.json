{
  "name": "@rowell-infra/sdk",
  "version": "1.0.0",
  "description": "Rowell Infra JavaScript SDK - Alchemy for Africa (Stellar + Hedera APIs & Analytics)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "stellar",
    "hedera",
    "blockchain",
    "africa",
    "fintech",
    "remittance",
    "stablecoin",
    "api",
    "sdk"
  ],
  "author": "Rowell Infra Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rowell-infra/rowell-infra.git",
    "directory": "sdk/js"
  },
  "bugs": {
    "url": "https://github.com/rowell-infra/rowell-infra/issues"
  },
  "homepage": "https://github.com/rowell-infra/rowell-infra#readme",
  "dependencies": {
    "axios": "^1.6.0",
    "stellar-sdk": "^10.4.0",
    "@hashgraph/sdk": "^2.7.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
